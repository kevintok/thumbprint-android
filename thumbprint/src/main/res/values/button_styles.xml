<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    An Android implementation of (some) of the buttons defined in
    https://thumbprint.thumbtack.com/ui/tp-ui-element-button/
    -->

    <style name="Thumbprint" />

    <style name="Thumbprint.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <!-- TODO(DS-942): Update horizontal padding to tp_space_4 on either side. -->
        <item name="android:padding">@dimen/spacing_smaller</item>
        <!-- stateListAnimator @null gets rid of shadow effects -->
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Body2Bold</item>
    </style>

    <style name="Thumbprint.Button.Primary">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textColor">@color/button_primary_text_color_selector</item>
    </style>

    <style name="Thumbprint.Button.Primary.Bleed">
        <item name="android:background">@drawable/button_primary_bleed_background</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Thumbprint.Button.Secondary">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textColor">@color/button_secondary_text_color_selector</item>
    </style>

    <style name="Thumbprint.Button.SecondaryDeprecated">
        <item name="android:background">@drawable/button_secondary_background_deprecated</item>
        <item name="android:textColor">@color/button_secondary_text_color_selector_deprecated</item>
    </style>

    <style name="Thumbprint.Button.SecondaryDeprecated.Bleed">
        <item name="android:background">@drawable/button_secondary_bleed_background</item>
        <item name="android:textColor">@color/tp_black</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Thumbprint.Button.Tertiary">
        <item name="android:background">@drawable/button_tertiary_background</item>
        <item name="android:textColor">@color/button_tertiary_text_color_selector</item>
    </style>

    <style name="Thumbprint.Button.TertiaryDeprecated">
        <item name="android:background">@drawable/button_tertiary_background_deprecated</item>
        <item name="android:textColor">@color/button_tertiary_text_color_selector_deprecated</item>
    </style>

    <style name="Thumbprint.Button.Caution">
        <item name="android:background">@drawable/button_caution_background</item>
        <item name="android:textColor">@color/button_caution_text_color_selector</item>
    </style>

    <style name="Thumbprint.Button.CautionDeprecated">
        <item name="android:background">@drawable/button_caution_background_deprecated</item>
        <item name="android:textColor">@color/button_tertiary_text_color_selector</item>
    </style>

    <style name="Thumbprint.Button.Solid">
        <item name="android:background">@drawable/button_solid_background</item>
        <item name="android:textColor">@color/button_solid_text_color_selector</item>
    </style>

    <style name="Thumbprint.Button.SolidDeprecated">
        <item name="android:background">@drawable/button_solid_background_deprecated</item>
        <item name="android:textColor">@color/button_solid_text_color_selector_deprecated</item>
    </style>

    <!-- TODO(PUNK-1160) This is not defined in Thumbprint -->
    <style name="Thumbprint.Button.Clear">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/button_clear_text_color_selector</item>
    </style>
</resources>
